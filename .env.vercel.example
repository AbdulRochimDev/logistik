APP_NAME="Logistik WMS"
APP_ENV=production
APP_KEY=
APP_DEBUG=false

# Use the production domain that Vercel serves the project on
# Example: https://logistik.vercel.app or https://wms.yourcompany.com
APP_URL=
ASSET_URL=${APP_URL}

APP_TIMEZONE=Asia/Jakarta
APP_FALLBACK_LOCALE=id
APP_TRUSTED_PROXIES="*"

LOG_CHANNEL=stderr
LOG_LEVEL=info
LOG_STACK=single

BROADCAST_CONNECTION=log
CACHE_STORE=database
FILESYSTEM_DISK=s3
QUEUE_CONNECTION=sync

SESSION_DRIVER=cookie
SESSION_LIFETIME=120
SESSION_DOMAIN=
SESSION_SECURE_COOKIE=true

SANCTUM_STATEFUL_DOMAINS=
SANCTUM_STATEFUL_PORTS=

# Database: Vercel MySQL or any managed MySQL-compatible service
DB_CONNECTION=mysql
DB_HOST=
DB_PORT=3306
DB_DATABASE=
DB_USERNAME=
DB_PASSWORD=
DB_SSL=true
DB_SSL_VERIFY_SERVER_CERT=true
DB_CA_PATH=

# Redis (optional but recommended for cache/session locking). Configure
# Upstash or another managed Redis instance when available.
REDIS_CLIENT=phpredis
REDIS_HOST=
REDIS_PASSWORD=
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1

MAIL_MAILER=log
MAIL_FROM_ADDRESS=
MAIL_FROM_NAME="Logistik WMS"

# Default admin/driver bootstrap credentials for seeding
ADMIN_PASSWORD=
DRIVER_PASSWORD=
DEMO_DRIVER_EMAIL=driver.demo@example.com
DEMO_DRIVER_PASSWORD=password

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=
AWS_BUCKET=
AWS_URL=
AWS_ENDPOINT=
AWS_USE_PATH_STYLE_ENDPOINT=false

APP_MAINTENANCE_DRIVER=database
APP_MAINTENANCE_STORE=database

# Database-backed cache / queue tables share the primary connection
DB_CACHE_CONNECTION=mysql
DB_CACHE_TABLE=cache
DB_QUEUE_CONNECTION=mysql
DB_QUEUE_TABLE=jobs
DB_QUEUE_RETRY_AFTER=90
DB_QUEUE=default
DB_QUEUE_FAILED_DRIVER=database-uuids
DB_QUEUE_FAILED_TABLE=failed_jobs

